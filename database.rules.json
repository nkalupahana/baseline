{
  "rules": {
    "config": {
      ".read": true,
      ".write": false
    },
    "$uid": {
      ".read": "auth != null && auth.uid == $uid",
      ".write": false,
      "lastWeekInReview": {
        ".write": "auth != null && auth.uid == $uid",
        ".validate": "newData.isNumber() && newData.val() == now"
      },
      "encryption": {
        ".read": false
      },
      "pdp": {
        ".read": false,
        "method": {
          ".read": "auth != null && auth.uid == $uid",
          ".write":"auth != null && auth.uid == $uid",
          ".validate": "newData.isString() && (newData.val() == 'upfront' || newData.val() == 'discreet')"
        }
      }
    },
    ".read": false,
    ".write": false
  }
}